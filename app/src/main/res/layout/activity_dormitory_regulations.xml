<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dms.beinone.application.activities.DormitoryNoticeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/layout_extension_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/apply_list_toolbar" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dormitory_faq_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="0.9">

        </android.support.v7.widget.RecyclerView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@color/applyList0"
            >


            <ImageView
                android:id="@+id/image_eye"
                android:layout_marginTop="4dp"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:src="@drawable/pink_confusional"
                android:layout_marginLeft="6dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/image_eye"
                android:layout_marginLeft="32dp"
                android:background="@drawable/rounded"
                android:layout_marginRight="32dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="자주하는 질문"
                android:textColor="@color/black"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="20sp"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
